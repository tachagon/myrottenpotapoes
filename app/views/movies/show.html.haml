
%h2 Details about #{@movie.title}

%ul#details
	%li
		%b Rating:
		= @movie.rating
	%li
		%b Release on:
		= @movie.release_date.strftime("%B %d, %Y")
	%li
		%b Description:
		= @movie.description

%h3 Review for #{@movie.title}
%ul#reviews
	- @movie.reviews.map do |r|
		%b Review by:
		#{r.moviegoer.name} &nbsp
		%b Potatoes:
		#{r.potatoes}
		%br

= link_to 'Add Review', new_movie_review_path(@movie)
%br
= link_to 'Update Review', edit_movie_review_path(@movie)
%br
= link_to 'Edit info', edit_movie_path(@movie)
%br
= link_to 'Delete', movie_path(@movie), :method => :delete
%br
= link_to 'Back to movie list', movies_path
